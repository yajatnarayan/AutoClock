{
  "name": "autooc",
  "version": "0.1.0",
  "description": "Intelligent GPU Performance Tuning - Safe, automated overclocking for NVIDIA GPUs",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "ts-node-dev --respawn src/backend/service/production-service.ts",
    "dev:frontend": "electron-forge start",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "electron-forge make",
    "start": "electron-forge start",
    "start:service": "node dist/backend/service/production-service.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "gpu",
    "overclocking",
    "nvidia",
    "performance",
    "tuning",
    "automation"
  ],
  "author": "AutoOC Team",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/ws": "^8.5.10",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.16.0"
  },
  "optionalDependencies": {
    "ffi-napi": "^4.0.3",
    "node-addon-api": "^7.1.0",
    "node-gyp": "^10.0.1",
    "node-windows": "^1.0.0-beta.8",
    "ref-napi": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
